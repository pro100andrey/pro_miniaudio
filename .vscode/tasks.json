{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "clang build",
            "command": "/usr/bin/clang",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${workspaceFolder}/src/miniaudio/miniaudio.c",
                "${workspaceFolder}/src/pro_miniaudio.c",
                "${workspaceFolder}/src/resource_manager.c",
                "${workspaceFolder}/src/logger.c",
                "${workspaceFolder}/src/bin/main.c",
                "-o",
                "${workspaceFolder}/build/main"
            ],
            "presentation": {
                "clear": false,
                "revealProblems": "onProblem",
                "reveal": "silent",
                "group": "build",
                "focus": false,
                "echo": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
