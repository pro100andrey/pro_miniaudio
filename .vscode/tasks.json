{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "clang build",
            "command": "/usr/bin/clang",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${workspaceFolder}/native/src/miniaudio.c",
                "${workspaceFolder}/native/src/audio_context.c",
                "${workspaceFolder}/native/src/resource_manager.c",
                "${workspaceFolder}/native/src/playback_device.c",
                "${workspaceFolder}/native/src/logger.c",
                "${workspaceFolder}/native/src/result.c",
                "${workspaceFolder}/native/src/waveform.c",
                "${workspaceFolder}/native/bin/main.c",

                "-o",
                "${workspaceFolder}/native/build/main"
            ],
            "presentation": {
                "clear": false,
                "revealProblems": "onProblem",
                "reveal": "silent",
                "group": "build",
                "focus": false,
                "echo": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
